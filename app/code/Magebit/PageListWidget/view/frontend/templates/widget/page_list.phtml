                <a href="<?= $escaper->escapeUrl($block->getPageUrl($page)) ?>" 
                   class="page-list-link"
                   title="<?= $escaper->escapeHtmlAttr($page->getTitle()) ?>">
                    <?= $escaper->escapeHtml($page->getTitle()) ?>
