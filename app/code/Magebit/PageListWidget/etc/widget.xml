<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="magebit_page_list_widget" class="Magebit\PageListWidget\Block\Widget\PageList">
        <label translate="true">CMS Page List Widget</label>
        <description translate="true">A widget that displays a configurable list of CMS pages</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="false" visible="true" sort_order="10">
                <label translate="true">Title</label>
                <description translate="true">Widget title to display above the page list</description>
            </parameter>
            <parameter name="display_mode" xsi:type="select" required="true" visible="true" sort_order="20">
                <label translate="true">Display Mode</label>
                <description translate="true">Choose whether to display all pages or only specific pages</description>
                <options>
                    <option name="all_pages" value="all_pages" selected="true">
                        <label translate="true">All Pages</label>
                    </option>
                    <option name="specific_pages" value="specific_pages">
                        <label translate="true">Specific Pages</label>
                    </option>
                </options>
            </parameter>
            <parameter name="selected_pages" xsi:type="multiselect" required="false" visible="true" sort_order="30">
                <label translate="true">Selected Pages</label>
                <description translate="true">Select specific CMS pages to display</description>
                <depends>
                    <parameter name="display_mode" value="specific_pages"/>
                </depends>
                <source_model>Magebit\PageListWidget\Model\Config\Source\CmsPage</source_model>
            </parameter>
        </parameters>
    </widget>
</widgets> 